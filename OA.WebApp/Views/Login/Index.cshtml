@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>OA管理系统登录</title>
    <meta  name="viewport" charset="utf-8" />
    <style type="text/css">
        *
        {
            padding: 0;
            margin: 0;
        }

        body
        {
            text-align: center;
            background: #4974A4;
        }

        #login
        {
            width: 740px;
            margin: 0 auto;
            font-size: 12px;
        }

        #loginlogo
        {
            width: 700px;
            height: 100px;
            overflow: hidden;
            margin-top: 50px;
        }

        #loginpanel
        {
            width: 729px;
            position: relative;
            height: 300px;
        }

        .panel-h
        {
            width: 729px;
            height: 20px;
            background: url('/Content/Images/login/panel-h.gif') no-repeat;
            position: absolute;
            top: 0px;
            left: 0px;
            z-index: 3;
        }

        .panel-f
        {
            width: 729px;
            height: 13px;
            background: url('/Content/Images/login/panel-f.gif') no-repeat;
            position: absolute;
            bottom: 0px;
            left: 0px;
            z-index: 3;
        }

        .panel-c
        {
            z-index: 2;
            background: url('/Content/Images/login/panel-c.gif') repeat-y;
            width: 729px;
            height: 300px;
        }

        .panel-c-l
        {
            position: absolute;
            left: 60px;
            top: 40px;
        }

        .panel-c-r
        {
            position: absolute;
            right: 20px;
            top: 50px;
            width: 222px;
            line-height: 200%;
            text-align: left;
        }

        .panel-c-l h3
        {
            color: #556A85;
            margin-bottom: 10px;
        }

        .panel-c-l td
        {
            padding: 7px;
        }

        .login-text
        {
            height: 24px;
            left: 24px;
            width: 191px;
            border: 1px solid #e9e9e9;
            background: #f9f9f9;
        }

        .login-text-focus
        {
            border: 1px solid #E6BF73;
        }

        .login-btn
        {
            width: 114px;
            height: 29px;
            color: #E9FFFF;
            line-height: 29px;
            background: url('/Content/Images/login/login-btn.gif') no-repeat;
            border: none;
            overflow: hidden;
            cursor: pointer;
        }

        #txtUsername, #code, #txtPassword
        {
            width: 191px;
        }

        #logincopyright
        {
            text-align: center;
            color: White;
            margin-top: 50px;
        }

        a
        {
            color: Black;
        }

            a:hover
            {
                color: Red;
                text-decoration: underline;
            }
    </style>
</head>
<body style="padding: 10px">
    <noscript>
        <p>浏览器未启用JavaScript功能,请开启JavaScript功能后,刷新该页面!</p>
    </noscript>
    <div id="login">
        <div id="loginlogo">
        </div>
        <div id="loginpanel">
            <div class="panel-h">
            </div>
            <div class="panel-c">
                <div class="panel-c-l">
                    <table>
                        <tbody>
                            <tr>
                                <td style="text-align: center" colspan="2">
                                    <h3>OA系统登录</h3>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right">账号：
                                </td>
                                <td style="text-align: left">
                                    <input type="text" name="LoginCode" id="LoginCode" class="login-text" />
                                </td>
                                <td><span id="spanName"></span></td>
                            </tr>
                            <tr>
                                <td style="text-align: right">密码：
                                </td>
                                <td style="text-align: left">
                                    <input type="password" name="LoginPwd" id="LoginPwd" value="" class="login-text" />
                                </td>
                                <td><span id="spanPwd"></span></td>
                            </tr>
                            <tr>
                                <td>验证码：
                                </td>
                                <td style="text-align: left">
                                    <input type="text" class="login-text" id="code" name="vCode" value="" />
                                </td>
                                <td><span id="spanCode"></span></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <img id="img" src="/login/GetValidateCode" style="float: left; height: 24px;" />
                                    <div style="float: left; margin-left: 5px; margin-top: 10px;">
                                        <a id="aValidateCode" href="javascript:void(0)">看不清，换一张</a>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: center" colspan="2">
                                    <input type="button" id="btnLogin" value="登录" class="login-btn" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel-c-r">
                    <p>
                        请从左侧输入登录账号和密码登录
                    </p>
                    <p>
                        如果遇到系统问题，请联系网络管理员。
                    </p>
                    <p>
                        如果没有账号，请联系网站管理员。
                    </p>
                    <p>
                        ......
                    </p>
                    <a href="myProtocol://C:\Users\Administrator\Desktop\myProtocol.reg">启动</a>
                </div>
            </div>
            <div class="panel-f">
            </div>
        </div>
        <div id="logincopyright">
            Copyright @@ 2012 ItCast.com
        </div>
    </div>
    <script src="~/Scripts/KxScripts/KxBase.js"></script>
    <script src="~/Scripts/jquery-1.11.3.js"></script>
    <script src="~/Scripts/jquery.easyui-1.4.5.js"></script>
    <script src="~/Scripts/locale/easyui-lang-zh_CN.js"></script>
    <link href="/Content/themes/icon.css" rel="stylesheet" />
    <link href="/Content/themes/default/easyui.css" rel="stylesheet" />
    <script type="text/javascript">
       
        //window为当前窗口,top用于指向的是最高层的框架,也就是浏览器窗口,这样实现了Session过期,iframe跳转到登录页面保证最高层框架也跳转到登录页面
        if (window != window.top) {
            top.location.href = location.href;
        }
        //开启严格模式
        "use strict";
        $(function () {
            //获取焦点,方便进行录入
            $("#LoginCode").focus();

            //更新验证码
            $("#aValidateCode").click(function () {
                var img = $("#img")[0];
                img.src = img.src + "?id=" + Math.random();
            });
            $("#code").keydown(function (event) {
                if (event.keyCode == 13 || event.keyCode == 9) {
                    $("#btnLogin").click();
                }
            });
            //校验登录账号密码并进行登录
            $("#btnLogin").click(function () {
                $("#btnLogin").attr('disabled', true);
                var logCode = $("#LoginCode").val();
                var logPwd = $("#LoginPwd").val();
                var validateCode = $("#code").val();
                var num = 0;
                if (logCode.length) {
                    $("#spanName").text("");
                } else {
                    num++;
                    $("#spanName").text("账号不符合要求!");
                }
                if (logPwd.length) {
                    $("#spanPwd").text("");
                } else {
                    num++;
                    $("#spanPwd").text("密码不符合要求!");
                }
                if (validateCode.length == 6) {
                    $("#spanCode").text("");
                } else {
                    num++;
                    $("#spanCode").text("验证码不符合要求!");
                }
                if (num > 0) {
                    $("#btnLogin").attr('disabled', false);
                    return;
                }
                $.ajax({
                    url: "/Login/UserLogin",
                    async: false,
                    type: "POST",
                    data: {
                        Code: validateCode,
                        UID: logCode,
                        UPwd: logPwd
                    },
                    success: function (serverData) {
                        var dataArray = serverData.split(":");
                        if (dataArray.length != 2) {
                            $.messager.alert("信息提示", "登录失败!", "error");
                            $("#aValidateCode").click();
                            $("#btnLogin").attr('disabled', false);
                        } else {
                            if (dataArray[0] == "0") {
                                $.messager.alert("信息提示", dataArray[1], "error");
                                $("#code").val("");
                                $("#aValidateCode").click();
                                $("#btnLogin").attr('disabled', false);
                            } else {
                                window.location.href = dataArray[1];
                            }
                        }

                    },
                    error: function (serverData) {
                        $("#btnLogin").attr('disabled', false);
                        $.messager.alert("警告", serverData);
                    }
                })
            });
        });
    </script>
</body>
</html>
